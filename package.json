    "test": "mocha --opts test/mocha.opts",
    "watchtest": "mocha --opts test/mocha.opts --reporter dot --watch",
    "typecheck": "tsc -p . --noEmit",
    "verify": "npm run lint && npm run typecheck && npm test"
  },
  "dependencies": {
